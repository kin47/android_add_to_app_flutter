<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SQLiteDemoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color0B0620</item>
        <item name="colorPrimaryVariant">@color/color24174D</item>
        <item name="colorOnPrimary">@color/colorF7DD70</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color4F5184</item>
        <item name="colorSecondaryVariant">@color/color9A6CD9</item>
        <item name="colorOnSecondary">@color/colorFEE778</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/battambang</item>
    </style>

    <style name="Theme.SQLiteDemoApp.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
        <item name="android:fontFamily">@font/battambang</item>
    </style>

    <style name="Theme.SQLiteDemoApp.AppWidgetContainer" parent="Theme.SQLiteDemoApp.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
        <item name="android:fontFamily">@font/battambang</item>
    </style>
</resources>